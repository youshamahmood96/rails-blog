<h1>Create A new Article</h1>

<% if @article.errors.any? %>
<h2>ERROR!</h2>
<ul>
<% @article.errors.full_messages.each do |message|%>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_with scope: :article,url: "/articles1", local:true do |f| %>
  <p>
    <%= f.label :title%> <br>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description%> <br>
    <%= f.text_area :description%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>